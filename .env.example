# Employee Management System - Environment Configuration
# Copy this file to .env and update with your production values

# ===================================
# Database Configuration
# ===================================
DB_NAME=employee_management_system
DB_USERNAME=emsuser
DB_PASSWORD=ChangeThisSecurePassword123!
DB_ROOT_PASSWORD=ChangeThisRootPassword456!
DB_PORT=3307

# Optional: Override database URL (default uses 'mysql' container name for Docker)
# For Docker: Leave unset or use the default below (uses 'mysql' container name automatically)
# For non-Docker: Set to jdbc:mysql://localhost:3306/employee_management_system?...
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/employee_management_system?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true&createDatabaseIfNotExist=true

# Optional: Override datasource username/password (defaults use DB_USERNAME and DB_PASSWORD above)
# SPRING_DATASOURCE_USERNAME=emsuser
# SPRING_DATASOURCE_PASSWORD=your_password


# ===================================
# JWT Configuration
# ===================================
# Generate a secure random string (at least 256 bits)
# You can use: openssl rand -base64 64
JWT_SECRET=ChangeThisToASecureRandomStringAtLeast256BitsForProductionUse
JWT_EXPIRATION=86400000

# ===================================
# Email Configuration
# ===================================
# Gmail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true
MAIL_SMTP_STARTTLS_REQUIRED=true
MAIL_SMTP_SSL_TRUST=smtp.gmail.com

# For Outlook/Hotmail, use:
# MAIL_HOST=smtp-mail.outlook.com
# MAIL_SMTP_SSL_TRUST=smtp-mail.outlook.com

# For Office365, use:
# MAIL_HOST=smtp.office365.com
# MAIL_SMTP_SSL_TRUST=smtp.office365.com

EMAIL_FROM_NAME=Employee Management System
EMAIL_FROM_ADDRESS=your-email@gmail.com

# ===================================
# Application Configuration
# ===================================
APP_URL=http://localhost
BACKEND_PORT=8080
FRONTEND_PORT=80

# ===================================
# CORS Configuration
# ===================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:4200,https://yourdomain.com



# ===================================
# Frontend Build URLs (Required for Production)
# ===================================
# These URLs are used at build time to configure the frontend
# For production, replace with your actual domain
API_URL=http://your-domain:8080/api
API_BASE_URL=http://your-domain:8080
FRONTEND_URL=http://your-domain

# ===================================
# ===================================
# OCR Configuration (Optional)
# ===================================
# OCR API Key for cloud OCR services (e.g., OCR.space, Google Vision API)
# Leave empty if using local Tesseract OCR only
OCR_API_KEY=

# Enable cloud OCR (requires OCR_API_KEY to be set)
OCR_CLOUD_ENABLED=false

# Enable local Tesseract OCR (recommended for most cases)
OCR_LOCAL_ENABLED=true

# ===================================
# JPA Configuration (Optional)
# ===================================
JPA_DDL_AUTO=update
